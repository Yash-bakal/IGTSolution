
<beans xmlns = "http://www.springframework.org/schema/beans" 
xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

   <bean id="per" class="com.Person">

   <property name="pid" value="101"></property>
   <property name="name" value="Ravi"></property>
   
   <property name="hobbies">
      <list>
        <value>C</value>
        <value>CPP</value>
        <value>JAVA</value>
        <value>PHP</value>
        <value>C#</value>
        <value>WEB</value>    
      </list>
   </property>
   
     <property name="emails">
      <list>
        <value>ravi@gmail.com</value>
        <value>ravi@india.com</value>           
      </list>
   </property>
   
        <property name="phones">
      <set>
        <value>1111111</value>
        <value>2222222</value>   
        <value>2222222</value>          
      </set>
   </property>
   
           <property name="education">
      <map>
         <entry key="graduation" value="Engineer"></entry> 
         <entry key="postgraduation" value="M.Tech"></entry>           
      </map>
   </property>
   
   
   </bean>
	
</beans>